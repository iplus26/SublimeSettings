{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "semi": "warn",
        "no-unused-vars": "warn"
    },
    "env": {
        "browser": true,
        "node": true
    },
    "globals": {
        "$": true // for jQuery or Zepto
    },
    "extends": "eslint:recommended"
}
